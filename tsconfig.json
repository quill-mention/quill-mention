{
  "compilerOptions": {
    "sourceRoot": "../src/",
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["es2017", "dom"],
    "downlevelIteration": true,
    "target": "es2020",
    "moduleResolution": "node",
    "declaration": false,
    "noEmitOnError": true,
    "incremental": false,
    "skipLibCheck": true,
    "strictPropertyInitialization": false
  },
  "include": ["./src/**/*.ts"]
}
