{
  "name": "quill-mention",
  "version": "6.0.0",
  "description": "@mentions for the Quill rich text editor",
  "homepage": "https://quill-mention.com/",
  "module": "dist/esm/index.mjs",
  "type": "module",
  "typings": "dist/esm/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.mjs"
    },
    "./autoregister": {
      "types": "./dist/esm/autoregister.d.ts",
      "import": "./dist/esm/autoregister.mjs"
    },
    "./dist/*.css": {
      "import": "./dist/*.css"
    }
  },
  "repository": "https://github.com/quill-mention/quill-mention.git",
  "author": "Fredrik Sundqvist <fsundqvist@gmail.com>",
  "license": "MIT",
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "quill": "^2.0.1"
  },
  "devDependencies": {
    "@ava/typescript": "^4.1.0",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "ava": "^6.1.2",
    "concurrently": "^8.2.2",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "parchment": "^3.0.0",
    "prettier": "3.2.5",
    "rollup": "^4.14.3",
    "rollup-plugin-postcss": "^4.0.2",
    "serve": "^14.2.1",
    "tslib": "^2.6.2",
    "typescript": "^5.4.5"
  },
  "scripts": {
    "clean": "rimraf dist",
    "start": "concurrently \"rollup -c -w\" \"serve docs\"",
    "build": "rollup -c",
    "lint": "prettier -w src/",
    "test": "npx tsc test/*.ts --outDir dist && ava"
  },
  "ava": {
    "typescript": {
      "compile": false,
      "rewritePaths": {}
    },
    "files": [
      "dist/test/*.js"
    ]
  },
  "keywords": [
    "quill",
    "mentions",
    "autocomplete",
    "mention"
  ]
}
